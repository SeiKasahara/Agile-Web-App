{
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "es2021": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "globals": {
      "anime": "readonly",
      "Alpine": "readonly",
      "AOS": "readonly",
      "Chart": "readonly",
      "tailwind": "readonly",
      "Toastify": "readonly",
      "Swiper": "readonly",
      "htmx": "readonly",
      "hyperscript": "readonly",
      "Livewire": "readonly",
      "Turbo": "readonly",
      "bootstrap": "readonly",
      "Popper": "readonly",
      "flowbite": "readonly",
      "twElements": "readonly",
      "gsap": "readonly",
      "ScrollTrigger": "readonly"
    },
    "rules": {
      "indent": ["error", 2],
      "quotes": ["error", "double",  { "allowTemplateLiterals": true }],
      "semi": ["error", "always"]
    }
  }
  